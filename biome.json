{
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "useKeyWithClickEvents": "off",
        "useFocusableInteractive": "off",
        "noStaticElementInteractions": "off",
        "noUselessSwitchCase": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noUnusedVariables": {
          "level": "error",
          "options": {
            "ignoreRestSiblings": true
          }
        }
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noDoubleEquals": "off",
        "noTsIgnore": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "files": {
    "ignoreUnknown": false
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "indentWidth": 2,
      "quoteStyle": "single",
      "semicolons": "always"
    }
  }
}
